{
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
    // This leads to very annoying deletion of unreachable code on save.
    // "source.fixAll": "explicit",
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.expo": true,
    "**/*.tsbuildinfo": true,
    "**/Pods": true,
    "Podfile": true,
    "**/dist": true,
    "**/dist-electron": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true
  },
  "files.exclude": {
    "**/Info.plist": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
  }
}